import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Список лабораторних',
      theme: ThemeData(
        primarySwatch: Colors.blue,
      ),
      home: LabsListPage(),
      debugShowCheckedModeBanner: false,
    );
  }
}

class LabsListPage extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    final labs = [
      'Лабораторна 6',
      'Лабораторна 7',
      'Лабораторна 8',
      'Лабораторна 9',
      'Лабораторна 10',
    ];

    return Scaffold(
      appBar: AppBar(
        title: Text('Список лабораторних'),
      ),
      body: ListView.builder(
        itemCount: labs.length,
        itemBuilder: (context, index) {
          return ListTile(
            title: Text(labs[index]),
            trailing: const Icon(Icons.arrow_forward_ios),
            onTap: () {
              if (labs[index] == 'Лабораторна 6') {
                Navigator.push(
                  context,
                  MaterialPageRoute(builder: (context) => Lab6Page()),
                );
              } else if (labs[index] == 'Лабораторна 7') {
                Navigator.push(
                  context,
                  MaterialPageRoute(builder: (context) => Lab7Page()),
                );
              } else if (labs[index] == 'Лабораторна 8') {
                Navigator.push(
                  context,
                  MaterialPageRoute(builder: (context) => Lab8Page()),
                );
              } else if (labs[index] == 'Лабораторна 9') {
                Navigator.push(
                  context,
                  MaterialPageRoute(builder: (context) => Lab9Page()),
                );
              } else if (labs[index] == 'Лабораторна 10') {
                Navigator.push(
                  context,
                  MaterialPageRoute(builder: (context) => Lab10Page()),
                );
              } else {
                ScaffoldMessenger.of(context).showSnackBar(
                  SnackBar(
                    content: Text('${labs[index]} ще не реалізовано'),
                  ),
                );
              }
            },
          );
        },
      ),
    );
  }
}

/// Лабораторна 6 
class Lab6Page extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    const double a = 250;
    const double b = 300;
    const double d = 200;
    const double r = 5;

    return Scaffold(
      appBar: AppBar(
        title: Text('Лабораторна 6 — Графічний інтерфейс'),
      ),
      body: Center(
        child: SizedBox(
          width: 700,
          height: 800,
          child: Stack(
            children: [
              Positioned(
                left: 50,
                top: 50,
                child: Container(
                  width: a,
                  height: 120,
                  padding: const EdgeInsets.all(8),
                  decoration: BoxDecoration(
                    color: Colors.yellowAccent,
                    border: Border.all(color: Colors.black),
                  ),
                  child: const Text(
                    'Ще не вмерла Україна, і\nслава, і воля,\nще нам, браття...',
                    style: TextStyle(fontSize: 16),
                  ),
                ),
              ),
              Positioned(
                left: 350,
                top: 50,
                child: Container(
                  width: b,
                  height: 120,
                  padding: const EdgeInsets.all(8),
                  decoration: BoxDecoration(
                    color: Colors.lightBlueAccent,
                    border: Border.all(color: Colors.black),
                  ),
                  child: const Text(
                    'Згинуть наші вороженьки,\nяк роса на сонці,\nзапануєм і ми, браття,\nу своїй сторонці.',
                    style: TextStyle(fontSize: 16),
                  ),
                ),
              ),
              Positioned(
                left: 200,
                top: 250,
                child: Container(
                  width: d * 2,
                  height: 80,
                  padding: const EdgeInsets.all(8),
                  decoration: BoxDecoration(
                    color: Colors.white,
                    border: Border.all(color: Colors.black, width: r),
                  ),
                  child: const Text(
                    'І покажем, що ми, браття,\nкозацького роду.',
                    style: TextStyle(
                      fontSize: 16,
                      decoration: TextDecoration.underline,
                    ),
                  ),
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }
}

/// Лабораторна 7 
class Lab7Page extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    const double a = 8;
    const double b = 28;
    const double c = 68;

    return Scaffold(
      appBar: AppBar(
        title: Text('Лабораторна 7 — Stack і RichText'),
      ),
      body: Center(
        child: Stack(
          children: [
            Container(
              width: 250,
              height: a + b + c,
              color: Colors.yellow,
            ),
            Positioned(
              top: a,
              left: a,
              child: Container(
                width: 250,
                height: b + c,
                color: Colors.pinkAccent,
              ),
            ),
            Positioned(
              top: a + b,
              left: a + b,
              child: Container(
                width: 250,
                height: c,
                color: Colors.lightBlue,
                child: Center(
                  child: RichText(
                    text: TextSpan(
                      text: 'DART',
                      style: TextStyle(
                        fontSize: 28,
                        fontWeight: FontWeight.bold,
                        color: Colors.black,
                        letterSpacing: 2,
                      ),
                    ),
                  ),
                ),
              ),
            ),
          ],
        ),
      ),
    );
  }
}

/// Лабораторна 8 
class Lab8Page extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    const double a = 250;
    const double b = 300;
    const double d = 200;

    return Scaffold(
      appBar: AppBar(
        title: Text('Лабораторна 8 — StatelessWidget'),
      ),
      body: Center(
        child: Stack(
          children: [
            Positioned(
              left: 40,
              top: 50,
              child: ColoredBoxWidget(
                color: Colors.yellowAccent,
                width: a,
                height: 120,
                text: 'Ще не вмерла Україна, і\nслава, і воля...',
              ),
            ),
            Positioned(
              left: 360,
              top: 50,
              child: ColoredBoxWidget(
                color: Colors.pinkAccent.shade100,
                width: b,
                height: 120,
                text:
                    'Згинуть наші вороженьки,\nяк роса на сонці,\nзапануєм і ми, браття...',
              ),
            ),
            Positioned(
              left: 200,
              top: 250,
              child: ColoredBoxWidget(
                color: Colors.white,
                width: d * 2,
                height: 80,
                text: 'І покажем, що ми, браття,\nкозацького роду.',
              ),
            ),
          ],
        ),
      ),
    );
  }
}

class ColoredBoxWidget extends StatelessWidget {
  final Color color;
  final double width;
  final double height;
  final String text;

  const ColoredBoxWidget({
    super.key,
    required this.color,
    required this.width,
    required this.height,
    required this.text,
  });

  @override
  Widget build(BuildContext context) {
    return Card(
      elevation: 6,
      color: color,
      shape: RoundedRectangleBorder(
        borderRadius: BorderRadius.circular(12),
      ),
      child: Container(
        width: width,
        height: height,
        padding: const EdgeInsets.all(12),
        child: Center(
          child: Text(
            text,
            textAlign: TextAlign.center,
            style: const TextStyle(
              fontSize: 16,
              color: Colors.black87,
            ),
          ),
        ),
      ),
    );
  }
}

/// Лабораторна 9 
class Lab9Page extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    const double a = 250;
    const double b = 300;
    const double d = 200;

    return Scaffold(
      appBar: AppBar(
        title: Text('Лабораторна 9 — StatefulWidget'),
      ),
      body: Center(
        child: Stack(
          children: [
            Positioned(
              left: 40,
              top: 50,
              child: InteractiveBoxWidget(
                color: Colors.yellowAccent,
                width: a,
                height: 120,
                text: 'Натисни на мене!',
              ),
            ),
            Positioned(
              left: 360,
              top: 50,
              child: InteractiveBoxWidget(
                color: Colors.pinkAccent.shade100,
                width: b,
                height: 120,
                text: 'І я зміню свій колір!',
              ),
            ),
            Positioned(
              left: 200,
              top: 250,
              child: InteractiveBoxWidget(
                color: Colors.lightBlueAccent,
                width: d * 2,
                height: 80,
                text: 'Я — інтерактивний віджет!',
              ),
            ),
          ],
        ),
      ),
    );
  }
}

/// StatefulWidget для лабораторної 9
class InteractiveBoxWidget extends StatefulWidget {
  final Color color;
  final double width;
  final double height;
  final String text;

  const InteractiveBoxWidget({
    super.key,
    required this.color,
    required this.width,
    required this.height,
    required this.text,
  });

  @override
  State<InteractiveBoxWidget> createState() => _InteractiveBoxWidgetState();
}

class _InteractiveBoxWidgetState extends State<InteractiveBoxWidget> {
  late Color _currentColor;
  bool _toggled = false;

  @override
  void initState() {
    super.initState();
    _currentColor = widget.color;
  }

  void _toggleColor() {
    setState(() {
      _toggled = !_toggled;
      _currentColor =
          _toggled ? Colors.greenAccent : widget.color;
    });
  }

  @override
  Widget build(BuildContext context) {
    return GestureDetector(
      onTap: _toggleColor,
      child: AnimatedContainer(
        duration: const Duration(milliseconds: 300),
        width: widget.width,
        height: widget.height,
        decoration: BoxDecoration(
          color: _currentColor,
          borderRadius: BorderRadius.circular(12),
          boxShadow: const [
            BoxShadow(
              color: Colors.black26,
              blurRadius: 6,
              offset: Offset(2, 2),
            ),
          ],
        ),
        padding: const EdgeInsets.all(12),
        child: Center(
          child: Text(
            widget.text,
            textAlign: TextAlign.center,
            style: const TextStyle(
              fontSize: 16,
              color: Colors.black87,
              fontWeight: FontWeight.w500,
            ),
          ),
        ),
      ),
    );
  }
}

